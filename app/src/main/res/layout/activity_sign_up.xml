<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SignUpScreen">

    <Spinner
        android:id="@+id/packageSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightblue"
        android:popupBackground="@color/ic_launcher_background"
        android:spinnerMode="dropdown"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTariff2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTariff2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Select a package that suits you best."
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSecurityKey" />

    <Button
        android:id="@+id/btnSignUpSU"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/pixcellblue"
        android:fontFamily="@font/hedvig_letters_sans"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2" />

    <TextView
        android:id="@+id/txtSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Surname"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <TextView
        android:id="@+id/txtSecurityKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Security Key"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSU" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhoneNumberSU" />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtIcon2" />

    <EditText
        android:id="@+id/editTextSecurityKey"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtSecurityKey"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPasswordSU"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

    <EditText
        android:id="@+id/editTextPhoneNumberSU"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="phone"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="33dp"
        android:layout_height="14dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextName"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtIcon2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="E-mail"
        android:textAlignment="center"
        android:textColor="#8E8E8E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/editTextSurname" />

    <TextView
        android:id="@+id/txtIcon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/hedvig_letters_sans"
        android:scaleX="3.2"
        android:scaleY="3.2"
        android:text="PixCell"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/hedvig_letters_sans"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtIcon2"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/txtIcon2"
        app:layout_constraintTop_toBottomOf="@+id/txtSurname" />
</androidx.constraintlayout.widget.ConstraintLayout>